<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>DispatchR</PackageId>
    <Version>1.0.0</Version>
    <Authors>Obinna Ezeh</Authors>
    <Company>Obiscode</Company>
    <Description>A lightweight request dispatcher with pipeline support</Description>
    <RepositoryUrl>https://github.com/obiscode/dispatcher</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>Dispatchr,mediator;cqrs</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.4" />
  </ItemGroup>

</Project>
